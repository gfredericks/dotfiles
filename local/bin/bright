#!/usr/bin/env bash

list_outputs(){
    xrandr | tail -n +2 | grep -oP '^\S+'
}

case "$1" in
    "day")
        for output in $(list_outputs); do
            xrandr --output $output --brightness 1 --gamma 1:1:1
        done
        ;;
    "night")
        for output in $(list_outputs); do
            xrandr --output $output --brightness 0.4 --gamma 1.1:0.8:0.7
        done
        ;;
esac
