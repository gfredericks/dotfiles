#!/usr/bin/env python3

import os
import random
import time

def main():
    # Get terminal size
    rows, cols = os.popen('stty size', 'r').read().split()
    rows, cols = int(rows), int(cols)

    for i in range(rows):
        for j in range(cols):
            if random.randint(0, 1):
                print("â–ˆ", end="")
            else:
                print(" ", end="")
        if i < rows - 1:
            print("")

if __name__ == "__main__":
    main()
    # Keep the script running for a long time
    time.sleep(999999999)
