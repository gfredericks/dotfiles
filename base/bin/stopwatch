#!/usr/bin/env python3

import time

start = time.time()

while True:
    time.sleep(0.047)
    secs = time.time() - start
    hours = int(secs / 3600)
    minutes = int((secs % 3600) / 60)
    seconds = int(secs % 60)
    millis = int((secs * 1000) % 1000)
    print("\r{:02d}:{:02d}:{:02d}.{:03d}".format(hours, minutes, seconds, millis), end="")
